        <script><![CDATA[var daysToClose = gs.getProperty('x_58872_needit.autoCloseOverdue');
var overdueTasks = new GlideRecord('x_58872_needit_tasks');
overdueTasks.addQuery('due_date', '<=', gs.daysAgo(daysToClose));
overdueTasks.addQuery('state', '<', 3);
overdueTasks.query();
while(overdueTasks.next()){
	gs.info('KK! closing overdue task: ' + overdueTasks.number);
	overdueTasks.work_notes = 'Task closed as it was overdue more than ' +daysToClose +' days';
	overdueTasks.state = 4;
	overdueTasks.update();
	
}]]></script>
